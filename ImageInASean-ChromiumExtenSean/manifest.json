{
    "manifest_version": 3,
    "name": "4chan Image Saver",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "downloads"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://boards.4chan.org/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }