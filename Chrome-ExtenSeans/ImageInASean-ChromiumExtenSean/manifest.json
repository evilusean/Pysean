{
  "manifest_version": 3,
  "name": "4chan Image Saver",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "downloads",
    "downloads.shelf",
    "downloads.open",
    "storage",
    "tabs",
    "scripting",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://boards.4chan.org/*",
    "*://i.4cdn.org/*",
    "*://8kun.top/*",
    "*://*.8kun.top/*",
    "*://nerv.8kun.top/*",
    "*://media.8kun.top/*",
    "file://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://boards.4chan.org/*",
        "*://8kun.top/*",
        "*://*.8kun.top/*",
        "*://i.4cdn.org/*",
        "*://nerv.8kun.top/*",
        "*://media.8kun.top/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}